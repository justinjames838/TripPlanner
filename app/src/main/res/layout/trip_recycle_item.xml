<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent"
    android:elevation="20dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#ff9500"
    app:cardCornerRadius="13dp">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:id="@+id/trip">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:id="@+id/trip_name"
                />
            <TextView
                android:id="@+id/trip_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/trip_name"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="24 January 2020"
                android:textSize="30dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/trip_date"
                android:id="@+id/trip_buttons"
                android:layout_marginTop="20dp">



                <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trip_details_button"
                android:text="View Details"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/trip_delete"
                    android:layout_alignParentEnd="true"
                    android:text="Delete"/>

            </RelativeLayout>

        </RelativeLayout>


</androidx.cardview.widget.CardView>