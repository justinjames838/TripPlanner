<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewAllTripsActivity"
    android:background="@drawable/night_sky">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Upcoming Trips"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:id="@+id/upcomingText"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/no_upcoming_Text"
        android:layout_below="@id/upcomingText"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:text="No upcoming trips"
        android:textAlignment="center"
        android:visibility="gone"
        android:layout_margin="10dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trip_recycler"
        android:layout_below="@id/no_upcoming_Text"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        android:visibility="gone"
        />
</RelativeLayout>