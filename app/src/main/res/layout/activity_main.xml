<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/night_sky">

    <TextView
        android:id="@+id/appNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-medium"
        android:text="Trip Buddy"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/upcomingTripBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="View Upcoming Trips"
        app:layout_constraintEnd_toEndOf="@+id/appNameText"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/appNameText"
        app:layout_constraintTop_toBottomOf="@+id/appNameText" />

    <Button
        android:id="@+id/addTripButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Add a new trip"
        app:layout_constraintEnd_toEndOf="@+id/upcomingTripBtn"
        app:layout_constraintStart_toStartOf="@+id/upcomingTripBtn"
        app:layout_constraintTop_toBottomOf="@+id/upcomingTripBtn" />

    <Button
        android:id="@+id/notesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Notes"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/addTripButton"
        app:layout_constraintStart_toStartOf="@+id/addTripButton"
        app:layout_constraintTop_toBottomOf="@+id/addTripButton" />

</androidx.constraintlayout.widget.ConstraintLayout>